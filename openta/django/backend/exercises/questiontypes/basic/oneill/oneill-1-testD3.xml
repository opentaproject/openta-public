  <exercisename>test-dD3</exercisename>
  <global>
    <oneforms>dx,dy,dz</oneforms>
    <vars>g , w, X  </vars>
v1 = [1,0,0];
v2 = [0,1,0];
v3 = [0,0,1];
id = [[1,0,0],[0,1,0],[0,0,1]];
d(g) := dD( g , [dx,dy,dz],[x,y,z],[[1,0,0],[0,1,0],[0,0,1]] );
f(w) := w[1] + 2 w[2] + 3 w[3];
G(X) := [ X[1], - X[2], X[3] ];
H(X)  := [ X[1]^2 , X[1] * X[2] , X[2] * X[3] ];
</global>
  <question key="1">
