<exercise> 
	<macros> [@p0, @p1, @p2 ] := randomsample(-3,3,3) ; 
      [@q0, @q1, @q2 ] := randomsample(-4,4,3); 
      @ans := 'cross( [@p0,@p1,@p2] , [@q0,@q1,@q2] )' ; 
      @v1 := [@p0, @p1, @p2 ] ; @v2 := [@q0, @q1, @q2 ]; 
  </macros>
	<exercisename>
		 LEVELA -practice crossproducts
	</exercisename>
	<global>
		 i = [1,0,0] ; j =  [0,1,0]; k = [0,0,1] ; 
		<var>
			<token>i</token>
			<tex>\hat{i}</tex>
		</var>
		<var>
			<token>j</token>
			<tex>\hat{j}</tex>
		</var>
		<var>
			<token>k</token>
			<tex>\hat{k}</tex>
		</var>
      v1  = @v1;
	</global>
	
	<question exposeglobals="true" key="1" type="default">
		<macros> [@r0, @r1, @r2 ] := randomsample(-3,3,3) ; [@s0, @s1, @s2 ] := randomsample(-4,4,3); @ans2 := 'cross( [@r0,@r1,@r2] , [@s0,@s1,@s2] )' </macros>
		<hint>
			<regex>cross</regex>
			<comment>
				 Cross product is not allowed in the answer! 
			
			</comment>
		</hint>
		<hint>
			<regex>(i|j|k)</regex>
			<comment>
				 Use array bracket notation 
			</comment>
		</hint>
		<variables> ans2 = cross( [@r0,@r1,@r2] , [@s0,@s1,@s2] ) </variables>
		<text>
			 QUESTION 1: What is $ [@r0,@r1,@r2] \times [@s0,@s1,@s2] $ written in array form. No  cross product allowed in answer. 
			</text>
		<expression> cross( [@r0,@r1,@r2] , [@s0,@s1,@s2] )</expression>
	</question>
	<question exposeglobals="true" key="2" type="default">
		<text>
			 QUESTION 2 What is $ ( @p0 \hat{i} + @p1 \hat{j} + @p2 \hat{k} ) \times ( @q0 \hat{i} + @q1 \hat{j} + @q2 \hat{k} ) $ written in unit vector form. 
		</text>
		<hint>
			<regex>cross</regex>
			<comment>
				 Cross product is not allowed in the answer! 
				
			</comment>
		</hint>
		<hint>
			<regex>(\[|\])</regex>
			<comment>
				 Use unit vector notation. 
				
			</comment>
		</hint>
		<expression> @ans </expression>
	</question>
	<question key="3" precision=".0001" type="default">
		<text>
			 What is sine of the angle between $ ( @p0 \hat{i} + @p1 \hat{j} + @p2 \hat{k} ) $ and $ ( @q0 \hat{i} + @q1 \hat{j} + @q2 \hat{k} ) $. 
			</text>
		<expression> abs( cross( @v1, @v2 ) ) / ( abs(@v1) * abs(@v2) ) </expression>
	</question>
</exercise>
